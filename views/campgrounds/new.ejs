<% include ../partials/header.ejs %>
<h1 style="text-align: center">Create a New Campground</h1>
<div class="row">
    <div style="width:30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Camp Name</label>
                <input class="form-control" type="text" name="campground[name]" id="name" placeholder="Name of Campground">
            </div>
            <div class="form-group">
                <label for="image">Camp Image Link</label>
                <input class="form-control" type="text" name="campground[image]" id="image" placeholder="Photo Url">
            </div>
            <div class="form-group">
                <label for="description">Camp Description</label>
                <input class="form-control" type="text" name="campground[description]" id="description" placeholder="Description">
            </div>
            <div class="form-group">
                <label for="price">Camp Price</label>
                <input class="form-control" type="number" name="campground[price]" id="price" placeholder="Price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Yosemite National Park, CA">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
