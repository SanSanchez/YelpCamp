<% include ../partials/header.ejs %>
<h1 style="text-align: center">Add a New Comment to <%= campground.name %></h1>
<div class="row">
    <div style="width:30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <textarea class="form-control Text" name="comment[text]" cols="50" rows="8" placeholder="Comment"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
</div>
<% include ../partials/footer.ejs %>